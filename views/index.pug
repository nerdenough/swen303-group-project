extends ./shared/layout.pug

block content
  #featured-carousel.carousel.slide(data-ride='carousel')
    ol.carousel-indicators
      li.active(data-target='#featured-carousel' data-slide-to='0')
      li(data-target='#featured-carousel' data-slide-to='1')
      li(data-target='#featured-carousel' data-slide-to='2')
      li(data-target='#featured-carousel' data-slide-to='3')

    .carousel-inner(role='listbox')
      .item.active
        img(src='/img/placeholder.png' alt='Placeholder')
      .item
        img(src='/img/placeholder.png' alt='Placeholder')
      .item
        img(src='/img/placeholder.png' alt='Placeholder')
      .item
        img(src='/img/placeholder.png' alt='Placeholder')

    a.left.carousel-control(href='#featured-carousel' role='button' data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#featured-carousel' role='button' data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
        span.sr-only Previous

  .container
    h1= title
    h2 Featured Software
    .card-list
      .col-md-3.col-sm-6.col-xs-6
        .card
      .col-md-3.col-sm-6.col-xs-6
        .card
      .col-md-3.col-sm-6.col-xs-6
        .card
      .col-md-3.col-sm-6.col-xs-6
        .card
    h2 Latest Software
    .card-list
      .col-md-3.col-sm-6.col-xs-6
        .card
      .col-md-3.col-sm-6.col-xs-6
        .card
      .col-md-3.col-sm-6.col-xs-6
        .card
      .col-md-3.col-sm-6.col-xs-6
        .card
